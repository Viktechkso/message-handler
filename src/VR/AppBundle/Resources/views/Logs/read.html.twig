{% extends '::base.html.twig' %}

{% block body -%}
    <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Logs</h1>

    <div class="row marginsVertical">
        <form action="{{ path('logs_read') }}" method="post" class="form logsFilter" {{ form_enctype(form) }}>
            <div class="col-md-6">
                <div class="row">{{ form_row(form.filename) }}</div>
                <div class="row">{{ form_row(form.date) }}</div>
                <div class="row">{{ form_errors(form) }}</div>
            </div>
            <div class="col-md-6">
                <div class="row">{{ form_row(form.type) }}</div>
                <div class="row">{{ form_row(form.search) }}</div>
                {{ form_rest(form) }}
                <div class="row"><input type="submit" class="btn btn-primary pull-right" /></div>
            </div>
        </form>
    </div>

    <div class="row marginsVertical">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th style="min-width: 110px;">Datetime</th>
                    <th>Type</th>
                    <th>Message</th>
                </tr>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.datetime }}</td>
                        <td>{{ log.type}}</td>
                        <td><code>{{ log.message}}</code></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            No logs found for the selected criteria
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}