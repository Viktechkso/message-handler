{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Create Account</h1>

    <div class="row">
        <div class="col-md-12">
            <h2>VAT Status</h2>

            <p>
                Messages created: <strong>{{ resultsCounter }}</strong>
            </p>

            {% for id in ids %}
                <p>
                    <a href="{{ path('message_show', { 'id': id }) }}" class="btn btn-info btn-xs">
                        # {{ id }}
                    </a>
                </p>
            {% endfor %}

            <a href="{{ path('account_create') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
            </a>
        </div>
    </div>
{% endblock %}