<table class="table table-striped table-condensed-max table-hover">
    {% for status, counter in statusCounters %}
        <tr>
            <td class="col-md-1">
                {{ status }}
            </td>
            <td class="col-md-1" style="text-align: right">
                {{ counter|number_format(0, ',', '.') }}
            </td>
        </tr>
    {% endfor %}
</table>