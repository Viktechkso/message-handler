{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Datamaps</h1>

    <p>
        <a href="{{ path('datamap_new') }}" class="btn btn-success">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create new
        </a>
    </p>
    
    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered">
                <thead>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th>
                    Description
                </th>
                <th></th>
                </thead>
                <tbody>
                {% for datamap in datamaps %}
                    <tr>
                        <td>
                            {{ datamap.id }}
                        </td>
                        <td>
                            {{ datamap.name }}
                        </td>
                        <td>
                            {{ datamap.typeName }}
                        </td>
                        <td style="max-width: 500px">
                            {{ datamap.description }}
                        </td>
                        <td>
                            <a href="{{ path('datamap_edit', {id: datamap.id}) }}" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}